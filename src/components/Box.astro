---
import '../styles/global.css';
import type { HTMLAttributes } from "astro/types";

export interface BoxProps extends HTMLAttributes<"div"> {
    borderColor?: string;
    borderStyle?: string;
    borderWidth?: string;
    boxPadding?: string;
    outlineColor?: string;
    outlineOffset?: string;
    outlineWidth?: string;
    textColor?: string;
    classes?: string;
}

const {
    borderColor,
    borderStyle,
    borderWidth,
    boxPadding,
    classes,
    outlineColor,
    outlineOffset,
    outlineWidth, 
    textColor,
    ...rest
} = Astro.props as BoxProps;
---

<the-box classList?:{classes} {...rest}>
    <slot />
</the-box>