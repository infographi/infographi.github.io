---
import "../styles/global.css";
import { EMAIL_ADDRESS, SITE_DESCRIPTION, TELEPHONE_NUMBER } from "../consts";
import { getRelativeLocaleUrl } from "astro:i18n";
import Box from "./Box.astro";
import Center from "./Center.astro";
import Link from "./Link.astro";
import Navigation from "./Navigation.astro";
import Stack from "./Stack.astro";
import Frame from "./Frame.astro";

const aboutURL = getRelativeLocaleUrl("en", "about");
const faviconLink = "../../public/favicon.svg";
const homeURL = getRelativeLocaleUrl("en", "/");
const logoLink = "../../public/INFOGRAPHI-LOGO.jpg";
---

<header class="box" role="banner">

		<Frame>
			<img  id="logo" src={logoLink} alt="#INFOGRAPHI logo." />
		</Frame>

		<Center>
			<Stack class:list={"stack-x-small"}>
				<h1 id="title">
					<span>I</span>
					<span>N</span>
					<span>F</span>
					<span>O</span>
					<span>G</span>
					<span>R</span>
					<span>A</span>
					<span>P</span>
					<span>H</span>
					<span>I</span>
				</h1>

				<dfn class="color-medium font-weight-black">{SITE_DESCRIPTION}</dfn>
			</Stack>
		</Center>

		<Navigation class:list={"sticky"} />
</header>